<% if favorite = current_user.favorite_for(post) %>
  <%= content_tag :div, class: 'media', id: "post-#{post.id}" do %>
  <div class="media">
    <div class="media-body">
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
      <small>
        <% avatar_url = User.avatar_url(@user, 128) %>
        <% unless avatar_url.nil? %>
          <div class="media-left">
            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
        <%= pluralize(@user.votes.count, 'votes') %>,
        <%= pluralize(@user.comments.count, 'comments') %>
      </small>
    </div>
  </div>
<% end %>
